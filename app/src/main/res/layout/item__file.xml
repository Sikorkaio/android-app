<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/clickable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <View
      android:id="@+id/file_selection__selection_highlight"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/selectedItemHighlight"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/file_selection__item_type"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:contentDescription="@string/file_selection__item_type_content_description"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/folder_drawable" />

  <TextView
      android:id="@+id/file_selection__item_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/roboto_medium"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/file_selection__item_type"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Folder name" />

</androidx.constraintlayout.widget.ConstraintLayout>
